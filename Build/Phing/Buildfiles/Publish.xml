<?xml version="1.0"?>
<project name="Publish">

	<target name="doc-publish-api">
		<fail unless="packageKey" message="You must set the 'packageKey' property to a package key."/>

		<if>
			<not>
				<available file="Packages/Framework/${packageKey}/Documentation/API/HTML/en/index.html" type="file"/>
			</not>
			<then>
				<phingcall target="doc-render-api">
					<property name="path.package" value="Packages/Framework/${packageKey}"/>
				</phingcall>
			</then>
		</if>

		<mkdir dir="${project.archivesDirectory}"/>
		<delete file="${project.archivesDirectory}/${packageKey}-API.zip" quiet="true"/>
		<zip destfile="${project.archivesDirectory}/${packageKey}-API.zip">
			<fileset dir="${project.basedir}/Packages/Framework/${packageKey}/Documentation/API/HTML/en">
				<include name="**"/>
			</fileset>
		</zip>

	<!-- sadly the ssh2 pecl extension seems broken and/or dead,
	     so we use exec instead of SshTask and ScpTask -->
		<exec command="ssh ${ssh.host.website} rm -rf ${path.apiBase.website}${packageKey}*"/>
		<exec command="ssh ${ssh.host.website} mkdir ${path.apiBase.website}${packageKey}"/>
		<exec command="scp -r ${project.archivesDirectory}/${packageKey}-API.zip ${ssh.host.website}:${path.apiBase.website}"/>
		<exec dir="Packages/Framework/${packageKey}/Documentation/API/HTML/en" command="scp -r * ${ssh.host.website}:${path.apiBase.website}${packageKey}/"/>

	</target>

	<target name="doc-publish-manual">
		<fail unless="packageKey" message="You must set the 'packageKey' property to a package key."/>

		<exec command="ssh ${ssh.host.website} rm -rf ${path.manualBase.website}${packageKey}"/>
		<exec command="ssh ${ssh.host.website} mkdir -p ${path.manualBase.website}${packageKey}"/>
		<exec dir="Packages/Framework/${packageKey}/Documentation/Manual/HTML/en" command="scp -r * ${ssh.host.website}:${path.manualBase.website}${packageKey}/"/>
	</target>

</project>
<?xml version="1.0" encoding="UTF-8"?>
<project name="Setup">

	<target name="clean-temporary">
		<delete dir="Data/Temporary" quiet="true"/>
		<delete dir="Web/_Resources" quiet="true"/>
	</target>

	<target name="setfilepermissions">
		<propertyprompt propertyName="cliuser" promptText="CLI user name (cliuser)" useExistingValue="true"/>
		<propertyprompt propertyName="webuser" defaultValue="_www" promptText="Webserver user name (webuser)" useExistingValue="true"/>
		<propertyprompt propertyName="webgroup" defaultValue="_www" promptText="Webserver group name (webgroup)" useExistingValue="true"/>

		<chown user="${cliuser}.${webgroup}">
			<fileset dir=".">
				<exclude name="Build"/>
				<exclude name="Build/**"/>
				<include name="**"/>
			</fileset>
		</chown>
		<chown user="${webuser}.${webgroup}">
			<fileset dir=".">
				<include name="Web"/>
				<include name="Web/**"/>
			</fileset>
		</chown>
		<chmod mode="2770">
			<fileset dir=".">
				<exclude name="Build"/>
				<exclude name="Build/**"/>
				<include name="**"/>
				<type type="dir"/>
			</fileset>
		</chmod>
		<chmod mode="0660">
			<fileset dir=".">
				<exclude name="Build"/>
				<exclude name="Build/**"/>
				<include name="**"/>
				<type type="file"/>
			</fileset>
		</chmod>
		<chmod mode="0700">
			<fileset dir=".">
				<include name="flow3"/>
			</fileset>
		</chmod>
	</target>

</project>